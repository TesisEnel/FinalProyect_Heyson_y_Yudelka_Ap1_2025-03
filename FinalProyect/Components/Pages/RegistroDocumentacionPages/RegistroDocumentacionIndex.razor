@page "/registrodocumentacion"
@rendermode InteractiveServer

@using FinalProyect.Models
@using FinalProyect.Services

@inject RegistroDocumentacionService RegistroService
@inject NavigationManager Nav

<div class="container-fluid p-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="h4 fw-bold text-dark mb-0">Documentación</h2>
            <small class="text-muted">Registro y control de documentos</small>
        </div>

        <button class="btn btn-primary shadow-sm" @onclick="CrearNuevo">
            <i class="fas fa-plus me-1"></i> Nuevo Registro
        </button>
    </div>

    <div class="card shadow border-0">

        <div class="card-header bg-white py-3 border-bottom">
            <div class="row align-items-center">
                <div class="col">
                    <h6 class="m-0 font-weight-bold text-primary">Listado de Documentos</h6>
                </div>
                <div class="col-auto">
                    <span class="badge bg-secondary">Total: @(Lista?.Count ?? 0)</span>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            @if (Lista == null)
            {
                <div class="text-center p-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
            }
            else if (Lista.Count == 0)
            {
                <div class="text-center p-5 text-muted">
                    <i class="fas fa-folder-open fa-3x mb-3"></i>
                    <p>No hay documentos registrados.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light text-uppercase small text-secondary">
                            <tr>
                                <th class="ps-4">ID</th>
                                <th>Solicitante</th>
                                <th>Tipo Documento</th>
                                <th>Fecha Registro</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Lista)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold">#@item.Id</td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="fw-bold">@item.NombreCompleto</span>
                                            <small class="text-muted">Ced: @item.Cedula</small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark border">
                                            @item.TipoDocumentacion
                                        </span>
                                    </td>
                                    <td>
                                        <span><i class="fas fa-calendar me-1 text-muted"></i> @item.FechaRegistro.ToString("dd/MM/yyyy")</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm shadow-sm" role="group">
                                            <button class="btn btn-outline-primary" title="Ver Detalles" @onclick="() => Ver(item.Id)">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="btn btn-outline-warning" title="Editar" @onclick="() => Editar(item.Id)">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-outline-success" title="Generar Recibo" @onclick="() => Recibo(item.Id)">
                                                <i class="fas fa-receipt"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
        <div class="card-footer bg-white border-top small text-muted">
            Mostrando @(Lista?.Count ?? 0) registros
        </div>
    </div>
</div>

@code {

    private List<RegistroDocumentacion>? Lista;

    protected override async Task OnInitializedAsync()
    {
        Lista = await RegistroService.ObtenerTodos();
    }

    private void CrearNuevo() => Nav.NavigateTo("/registrodocumentacion/create");
    private void Ver(int id) => Nav.NavigateTo($"/registrodocumentacion/details/{id}");
    private void Editar(int id) => Nav.NavigateTo($"/registrodocumentacion/edit/{id}");
    private void Recibo(int id) => Nav.NavigateTo($"/recibo/create/{id}/RegistroDocumentacion");
}