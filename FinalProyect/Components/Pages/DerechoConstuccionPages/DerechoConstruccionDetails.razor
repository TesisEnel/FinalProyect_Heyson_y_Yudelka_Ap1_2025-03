@page "/construccion/details/{Id:int}"
@rendermode InteractiveServer

@using FinalProyect.Models
@using FinalProyect.Services

@inject DerechoConstruccionService ConstruccionService
@inject NavigationManager Nav

<div class="fw-bold text-primary mb-4">Detalles del Derecho a Construcción</div>

@if (Error != null)
{
    <div class="alert alert-danger">@Error</div>
}

@if (Modelo == null)
{
    <div>Cargando...</div>
}
else
{
    <div class="card shadow p-4">

             @*DATOS DEL SOLICITANTE*@
        <div class="text-primary mb-3">Datos del Solicitante</div>

        <div class="row mb-3">
            <div class="col-md-4">
                <strong>Nombre:</strong>
                <div>@Modelo.Solicitante?.NombreCompleto</div>
            </div>

            <div class="col-md-4">
                <strong>Cédula:</strong>
                <div>@Modelo.Solicitante?.Cedula</div>
            </div>

            <div class="col-md-4">
                <strong>Teléfono:</strong>
                <div>@Modelo.Solicitante?.Telefono</div>
            </div>
        </div>

        <hr />

             @*FECHA & HORA*@
        <div class="text-primary mb-3">Información del trámite</div>

        <div class="row mb-3">
            <div class="col-md-4">
                <strong>Fecha:</strong>
                <div>@Modelo.Fecha.ToString("dd/MM/yyyy")</div>
            </div>

            <div class="col-md-4">
                <strong>Hora:</strong>
                <div>@Modelo.Hora.ToString(@"hh\:mm")</div>
            </div>

            <div class="col-md-4">
                <strong>Monto:</strong>
                <div>RD$ @Modelo.Monto</div>
            </div>
        </div>

        <hr />

        <h6 class="text-primary fw-bold">Documentos Adjuntos</h6>

        <div class="row">
            @DocumentCard("Recibo Inspector", DocumentType.ReciboInspector))
            @DocumentCard("Recibo Sellado", DocumentType.FotoReciboSellado)
        </div>

        <hr />
        <h5 class="text-primary fw-bold">Recibo</h5>

        @if (Modelo.ReciboIngresoId == null)
        {
            <div class="alert alert-warning">Aún no se ha generado un recibo.</div>

            <button class="btn btn-success"
                    @onclick="@(() => Nav.NavigateTo($"/recibo/create/{Modelo.Id}/DerechoConstruccion"))">
                <i class="fas fa-receipt"></i> Generar Recibo
            </button>
        }
        else
        {
            <div class="mt-2">
                <button class="btn btn-primary btn-sm"
                        @onclick="@(() => Nav.NavigateTo($"/recibo/create/{Modelo.Id}/DerechoConstruccion?view=true"))">
                    <i class="fas fa-eye"></i> Ver Recibo
                </button>
            </div>
        }

       <hr/>

        <div class="d-flex gap-2 mt-3">
            <button class="btn btn-warning" @onclick="Editar">
                <i class="fas fa-edit"></i> Editar
            </button>

            <button class="btn btn-secondary" @onclick="Volver">
                <i class="fas fa-arrow-left"></i> Volver
            </button>
        </div>
    </div>
}

@code {

    [Parameter] public int Id { get; set; }

    private DerechoConstruccion? Modelo;
    private string? Error;

    protected override async Task OnInitializedAsync()
    {
        Modelo = await ConstruccionService.ObtenerPorId(Id);

        if (Modelo == null)
        {
            Error = "No se encontró el registro solicitado.";
        }
    }

    private RenderFragment DocumentCard(string titulo, DocumentType tipo) => __builder =>
    {
        Documento? doc = null;

        if (tipo != DocumentType.FotoReciboSellado)
        {
            doc = Modelo?.Documentos?.FirstOrDefault(d => d.TipoDocumento == tipo);
        }
        else
        {
            doc = Modelo?.ReciboIngreso?.Documentos?
                .FirstOrDefault(d => d.TipoDocumento == DocumentType.FotoReciboSellado);
        }

        __builder.OpenElement(0, "div");
        __builder.AddAttribute(1, "class", "col-md-3 mb-3");

        __builder.OpenElement(2, "div");
        __builder.AddAttribute(3, "class", "card shadow-sm text-center p-2");

        __builder.OpenElement(4, "h6");
        __builder.AddContent(5, titulo);
        __builder.CloseElement();

        if (doc == null)
        {
            __builder.OpenElement(6, "div");
            __builder.AddAttribute(7, "class", "text-muted small");
            __builder.AddContent(8, "No disponible");
            __builder.CloseElement();
        }
        else
        {
            if (doc.Extension.ToLower().Contains("pdf"))
            {
                __builder.OpenElement(9, "img");
                __builder.AddAttribute(10, "src", "_content/FinalProyect/pdf_icon.png");
                __builder.AddAttribute(11, "class", "img-thumbnail mb-2");
                __builder.AddAttribute(12, "style", "height:80px; object-fit:contain;");
                __builder.CloseElement();
            }
            else
            {
                __builder.OpenElement(13, "img");
                __builder.AddAttribute(14, "src", doc.BlobUrl);
                __builder.AddAttribute(15, "class", "img-thumbnail mb-2");
                __builder.AddAttribute(16, "style", "height:80px; object-fit:cover;");
                __builder.CloseElement();
            }
            __builder.OpenElement(17, "a");
            __builder.AddAttribute(18, "href", doc.BlobUrl);
            __builder.AddAttribute(19, "target", "_blank");
            __builder.AddAttribute(20, "class", "btn btn-primary btn-sm");
            __builder.AddContent(21, "Ver documento");
            __builder.CloseElement();
        }

        __builder.CloseElement();
        __builder.CloseElement();
    };

    private void Editar()
    {
        Nav.NavigateTo($"/construccion/edit/{Id}");
    }

    private void Volver()
    {
        Nav.NavigateTo("/construccion");
    }
}