@page "/construccion"
@rendermode InteractiveServer

@using FinalProyect.Models
@using FinalProyect.Services

@inject DerechoConstruccionService ConstruccionService
@inject NavigationManager Nav

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h4 mb-0 text-gray-800">Derecho a Construcción</h1>

    <button class="btn btn-primary" @onclick="CrearNuevo">
        <i class="fas fa-plus"></i> Nuevo Derecho a Construcción
    </button>
</div>

<div class="card shadow">
    <div class="card-header bg-primary text-white">
        <strong>Listado de Derecho a Construcción</strong>
    </div>

    <div class="card-body p-0">
        @if (Lista == null)
        {
            <div class="p-3">Cargando...</div>
        }
        else if (Lista.Count == 0)
        {
            <div class="p-3">No hay registros.</div>
        }
        else
        {
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Solicitante</th>
                        <th>Cédula</th>
                        <th>Fecha</th>
                        <th>Monto</th>
                        <th>Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Lista)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Solicitante?.NombreCompleto</td>
                            <td>@item.Solicitante?.Cedula</td>
                            <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                            <td>RD$ @item.Monto.ToString("N2")</td>

                            <td>
                                <button class="btn btn-info btn-sm me-1" @onclick="() => Ver(item.Id)">
                                    <i class="fas fa-eye"></i>
                                </button>

                                <button class="btn btn-warning btn-sm me-1" @onclick="() => Editar(item.Id)">
                                    <i class="fas fa-edit"></i>
                                </button>

                                <button class="btn btn-success btn-sm" @onclick="() => GenerarRecibo(item.Id)">
                                    <i class="fas fa-receipt"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        }
    </div>

</div>

@code {
    private List<DerechoConstruccion>? Lista;

    protected override async Task OnInitializedAsync()
    {
        Lista = await ConstruccionService.ObtenerTodos();
    }

    private void CrearNuevo() => Nav.NavigateTo("/construccion/create");
    private void Ver(int id) => Nav.NavigateTo($"/construccion/details/{id}");
    private void Editar(int id) => Nav.NavigateTo($"/construccion/edit/{id}");
    private void GenerarRecibo(int id) => Nav.NavigateTo($"/recibo/create/{id}/{ProcessType.DerechoConstruccion}");
}

