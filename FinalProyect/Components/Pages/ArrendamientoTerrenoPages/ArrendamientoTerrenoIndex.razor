@page "/arrendamiento"
@rendermode InteractiveServer

@using FinalProyect.Models
@using FinalProyect.Services

@inject ArrendamientoTerrenoService ArrService
@inject NavigationManager Nav

<div class="container-fluid p-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="h4 fw-bold text-dark mb-0">Arrendamientos</h2>
            <small class="text-muted">Gestión de terrenos del cementerio</small>
        </div>

        <div class="d-flex gap-2">
            <button class="btn btn-warning shadow-sm" @onclick="VerVencimientos">
                <i class="fas fa-bell me-1"></i> Vencimientos
            </button>
            <button class="btn btn-primary shadow-sm" @onclick="CrearNuevo">
                <i class="fas fa-plus me-1"></i> Nuevo Registro
            </button>
        </div>
    </div>

    <div class="card shadow border-0">

        <div class="card-header bg-white py-3 border-bottom">
            <div class="row align-items-center">
                <div class="col">
                    <h6 class="m-0 font-weight-bold text-primary">Listado General</h6>
                </div>
                <div class="col-auto">
                    <span class="badge bg-secondary">Total: @(Lista?.Count ?? 0)</span>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            @if (Lista == null)
            {
                <div class="text-center p-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
            }
            else if (Lista.Count == 0)
            {
                <div class="text-center p-5 text-muted">
                    <i class="fas fa-folder-open fa-3x mb-3"></i>
                    <p>No hay registros disponibles.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light text-uppercase small text-secondary">
                            <tr>
                                <th class="ps-4">ID</th>
                                <th>Solicitante</th>
                                <th>Contacto</th>
                                <th>Ubicación</th>
                                <th>Vigencia</th>
                                <th class="text-end">Monto</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Lista)
                            {
                                <tr class="@GetRowClass(item)">
                                    <td class="ps-4 fw-bold">#@item.Id</td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="fw-bold">@item.Solicitante?.NombreCompleto</span>
                                            <small class="text-muted">Ced: @item.Solicitante?.Cedula</small>
                                        </div>
                                    </td>
                                    <td>
                                        <i class="fas fa-phone-alt text-muted me-1"></i>
                                        @item.Solicitante?.Telefono
                                    </td>
                                    <td>
                                        <div>@item.Ubicacion</div>
                                        <small class="text-muted">@item.MetrosCuadrados m²</small>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column" style="font-size: 0.9rem;">
                                            <span><i class="fas fa-calendar-check text-success me-1"></i> @item.FechaInicio.ToString("dd/MM/yyyy")</span>
                                            <span class="@GetDateColor(item)"><i class="fas fa-calendar-times me-1"></i> @item.FechaFin.ToString("dd/MM/yyyy")</span>
                                        </div>
                                    </td>
                                    <td class="text-end fw-bold text-dark">
                                        RD$ @ProcessPrices.GetPrice(ProcessType.ArrendamientoTerreno, item.MetrosCuadrados).ToString("N2")
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm shadow-sm" role="group">
                                            <button class="btn btn-outline-primary" title="Ver Detalles" @onclick="() => Ver(item.Id)">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="btn btn-outline-warning" title="Editar" @onclick="() => Editar(item.Id)">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-outline-success" title="Generar Recibo" @onclick="() => GenerarRecibo(item.Id)">
                                                <i class="fas fa-receipt"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
        <div class="card-footer bg-white border-top small text-muted">
            Mostrando @(Lista?.Count ?? 0) registros
        </div>
    </div>
</div>

@code {
    private List<ArrendamientoTerreno>? Lista;

    protected override async Task OnInitializedAsync()
    {
        Lista = await ArrService.ObtenerTodos();
    }

    private void CrearNuevo() => Nav.NavigateTo("/arrendamiento/create");
    private void Ver(int id) => Nav.NavigateTo($"/arrendamiento/details/{id}");
    private void Editar(int id) => Nav.NavigateTo($"/arrendamiento/edit/{id}");
    private void GenerarRecibo(int id) => Nav.NavigateTo($"/recibo/create/{id}/{ProcessType.ArrendamientoTerreno}");
    private void VerVencimientos() => Nav.NavigateTo("/arrendamiento/vencimientos");

    private string GetRowClass(ArrendamientoTerreno item)
    {
        if (item.FechaFin < DateTime.Now) return "table-danger";
        if ((item.FechaFin - DateTime.Now).TotalDays <= 30) return "table-warning";
        return "";
    }

    private string GetDateColor(ArrendamientoTerreno item)
    {
        if (item.FechaFin < DateTime.Now) return "text-danger fw-bold";
        if ((item.FechaFin - DateTime.Now).TotalDays <= 30) return "text-warning fw-bold";
        return "text-secondary";
    }
}