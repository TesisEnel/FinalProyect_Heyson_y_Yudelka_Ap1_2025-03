@page "/arrendamiento"
@rendermode InteractiveServer

@using FinalProyect.Models
@using FinalProyect.Services

@inject ArrendamientoTerrenoService ArrService
@inject NavigationManager Nav

<style>
    :root {
        --color-navy: #171840;
        --color-navy-light: #232452;
        --color-teal: #2c7da0;
    }

    .btn-navy {
        background-color: var(--color-navy);
        color: white;
        border: none;
    }

        .btn-navy:hover {
            background-color: var(--color-navy-light);
            color: white;
        }

    .card-header-navy {
        background: linear-gradient(195deg, #171840 0%, #4b5d67 100%);
        color: white;
        border-radius: 0.5rem 0.5rem 0 0 !important;
        box-shadow: 0 4px 20px 0 rgba(0,0,0,.14), 0 7px 10px -5px rgba(23, 24, 64, .4) !important;
        margin: -20px 15px 0;
        padding: 15px;
        position: relative;
        z-index: 1;
    }

    .table-responsive {
        padding-top: 10px;
    }

    /* Custom style for expiration rows to look good with the new theme */
    .row-expired {
        background-color: rgba(244, 67, 53, 0.1) !important; /* Soft Red */
    }

    .row-warning {
        background-color: rgba(251, 140, 0, 0.1) !important; /* Soft Orange */
    }
</style>

<div class="container-fluid py-4">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h4 class="mb-0 fw-bold" style="color: #171840;">Gestión de Arrendamientos</h4>
            <p class="text-sm mb-0 text-secondary">Control de terrenos y vencimientos</p>
        </div>

        <div class="d-flex gap-2">
            <button class="btn btn-warning shadow-sm px-4" style="border-radius: 20px;" @onclick="VerVencimientos">
                <i class="fas fa-bell me-2"></i> Vencimientos
            </button>
            <button class="btn btn-navy shadow-sm px-4" style="border-radius: 20px;" @onclick="CrearNuevo">
                <i class="fas fa-plus me-2"></i> Nuevo Arrendamiento
            </button>
        </div>
    </div>

    <div class="card border-0 shadow-sm" style="border-radius: 12px; overflow: visible;">

        <div class="card-header-navy">
            <h6 class="text-white text-capitalize ps-3 mb-0">Listado de Arrendamientos</h6>
        </div>

        <div class="card-body px-0 pb-2 pt-4">
            <div class="table-responsive p-0">
                @if (Lista == null)
                {
                    <div class="text-center p-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                        <p class="mt-2 text-secondary">Cargando registros...</p>
                    </div>
                }
                else if (Lista.Count == 0)
                {
                    <div class="text-center p-5">
                        <i class="fas fa-folder-open fs-1 text-muted mb-3 opacity-50"></i>
                        <p class="text-secondary fw-bold">No hay arrendamientos registrados.</p>
                        <button class="btn btn-sm btn-outline-secondary mt-2" @onclick="CrearNuevo">
                            Crear el primero
                        </button>
                    </div>
                }
                else
                {
                    <table class="table align-items-center mb-0 table-hover">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-4">ID</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Solicitante</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Ubicación</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Vencimiento</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Monto</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Acciones</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Lista)
                            {
                                <tr class="@GetRowClass(item)">
                                    <td class="ps-4">
                                        <p class="text-xs font-weight-bold mb-0 text-secondary">#@item.Id</p>
                                    </td>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm fw-bold" style="color: #171840;">@(item.Solicitante?.NombreCompleto ?? "---")</h6>
                                                <p class="text-xs text-secondary mb-0">
                                                    <i class="fas fa-phone me-1"></i> @(item.Solicitante?.Telefono ?? "---")
                                                </p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0 text-dark">@item.Ubicacion</p>
                                        <p class="text-xs text-secondary mb-0">@item.MetrosCuadrados m²</p>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="text-xs font-weight-bold text-dark">@item.FechaFin.ToString("dd/MM/yyyy")</span>
                                            <span class="text-xs text-secondary">Inicio: @item.FechaInicio.ToString("dd/MM/yyyy")</span>
                                        </div>
                                    </td>
                                    <td class="align-middle text-center text-sm">
                                        <span class="badge badge-sm bg-gradient-success">
                                            RD$ @ProcessPrices.GetPrice(ProcessType.ArrendamientoTerreno, item.MetrosCuadrados).ToString("N2")
                                        </span>
                                    </td>
                                    <td class="align-middle text-center">
                                        <button class="btn btn-link text-info text-gradient px-3 mb-0"
                                                title="Ver Detalles"
                                                @onclick="() => Ver(item.Id)">
                                            <i class="fas fa-eye me-2"></i>Ver
                                        </button>
                                        <button class="btn btn-link text-dark px-3 mb-0"
                                                title="Editar"
                                                @onclick="() => Editar(item.Id)">
                                            <i class="fas fa-pencil-alt me-2"></i>Editar
                                        </button>
                                        <button class="btn btn-link text-success px-3 mb-0"
                                                title="Generar Recibo"
                                                @onclick="() => GenerarRecibo(item.Id)">
                                            <i class="fas fa-receipt me-2"></i>Recibo
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private List<ArrendamientoTerreno>? Lista;

    protected override async Task OnInitializedAsync()
    {
        Lista = await ArrService.ObtenerTodos();
    }

    private void CrearNuevo() => Nav.NavigateTo("/arrendamiento/create");
    private void Ver(int id) => Nav.NavigateTo($"/arrendamiento/details/{id}");
    private void Editar(int id) => Nav.NavigateTo($"/arrendamiento/edit/{id}");
    private void GenerarRecibo(int id) => Nav.NavigateTo($"/recibo/create/{id}/{ProcessType.ArrendamientoTerreno}");
    private void VerVencimientos() => Nav.NavigateTo("/arrendamiento/vencimientos");

    private string GetRowClass(ArrendamientoTerreno item)
    {
        if (item.FechaFin < DateTime.Now)
            return "row-expired";

        if ((item.FechaFin - DateTime.Now).TotalDays <= 30)
            return "row-warning";

        return "";
    }
}