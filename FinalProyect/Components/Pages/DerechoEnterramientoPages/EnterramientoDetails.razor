@page "/enterramiento/details/{Id:int}"
@using FinalProyect.Models
 @rendermode InteractiveServer
@inject FinalProyect.Services.DerechoEnterramientoService EnterramientoService
@inject NavigationManager Nav

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h4 text-gray-800">Detalles del Derecho a Enterramiento</h1>
    </div>

    @if (Modelo == null)
    {
        <div class="alert alert-danger">
            No se encontró este registro.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Información del Registro</h5>
            </div>

            <div class="card-body">

                <h6 class="text-primary fw-bold">Información General</h6>

                <div class="row mb-4">
                    <div class="col-md-4">
                        <strong>Registrado por:</strong> @Modelo.UsuarioId
                    </div>
                    <div class="col-md-4">
                        <strong>Fecha:</strong> @Modelo.Fecha.ToString("dd/MM/yyyy")
                    </div>
                    <div class="col-md-4">
                        <strong>Hora:</strong> @DateTime.Today.Add(Modelo.Hora).ToString(@"hh:mm tt")
                    </div>
                </div>

                <hr />

                <h6 class="text-primary fw-bold">Datos del Solicitante</h6>

                <div class="row mb-4">
                    <div class="col-md-4"><strong>Nombre:</strong> @Modelo.Solicitante?.NombreCompleto</div>
                    <div class="col-md-4"><strong>Cédula:</strong> @Modelo.Solicitante?.Cedula</div>
                    <div class="col-md-4"><strong>Teléfono:</strong> @Modelo.Solicitante?.Telefono</div>
                </div>

                <hr />

                <h6 class="text-primary fw-bold">Datos del Fallecido</h6>

                <div class="row mb-4">
                    <div class="col-md-4"><strong>Nombre:</strong> @Modelo.NombreFallecido</div>
                    <div class="col-md-4"><strong>Cédula:</strong> @Modelo.CedulaFallecido</div>
                </div>

                <hr />

                <h6 class="text-primary fw-bold">Documentos Adjuntos</h6>

                <div class="row">
                    @DocumentCard("Cédula del Solicitante", DocumentType.CedulaSolicitante)
                    @DocumentCard("Cédula del Fallecido", DocumentType.CedulaFallecido)
                    @DocumentCard("Acta de Defunción", DocumentType.ActaDefuncion)
                    @DocumentCard("Recibo Sellado", DocumentType.FotoReciboSellado)
                </div>

                <hr />

                <h6 class="text-primary fw-bold">Recibo</h6>

                @if (Modelo.ReciboIngresoId == null)
                {
                    <div class="alert alert-warning">Aún no se ha generado un recibo.</div>

                    <button class="btn btn-success"
                            @onclick="@(() => Nav.NavigateTo($"/recibo/create/{Modelo.Id}/DerechoEnterramiento"))">
                        <i class="fas fa-receipt"></i> Generar Recibo
                    </button>
                }
                else
                {
                    <button class="btn btn-primary"
                            @onclick="@(() => Nav.NavigateTo($"/recibo/create/{Modelo.Id}/DerechoEnterramiento?view=true"))">
                        <i class="fas fa-eye"></i> Ver Recibo
                    </button>
                }

                <hr />

                <button class="btn btn-warning me-2"
                        @onclick="@(() => Nav.NavigateTo($"/enterramiento/edit/{Modelo.Id}"))">
                    <i class="fas fa-edit"></i> Editar
                </button>

                <button class="btn btn-secondary" @onclick="Volver">
                    <i class="fas fa-arrow-left"></i> Volver
                </button>

            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    private DerechoEnterramiento? Modelo;

    protected override async Task OnInitializedAsync()
    {
        Modelo = await EnterramientoService.ObtenerPorId(Id);
    }

    private void Volver() => Nav.NavigateTo("/enterramiento");

    private RenderFragment DocumentCard(string titulo, DocumentType tipo) => __builder =>
    {
        Documento? doc = null;

        if (tipo != DocumentType.FotoReciboSellado)
        {
            doc = Modelo?.Documentos?.FirstOrDefault(d => d.TipoDocumento == tipo);
        }
        else
        {
            doc = Modelo?.ReciboIngreso?.Documentos?
                .FirstOrDefault(d => d.TipoDocumento == DocumentType.FotoReciboSellado);
        }

        __builder.OpenElement(0, "div");
        __builder.AddAttribute(1, "class", "col-md-3 mb-3");

        __builder.OpenElement(2, "div");
        __builder.AddAttribute(3, "class", "card shadow-sm text-center p-2");

        __builder.OpenElement(4, "h6");
        __builder.AddContent(5, titulo);
        __builder.CloseElement();

        if (doc == null)
        {
            __builder.OpenElement(6, "div");
            __builder.AddAttribute(7, "class", "text-muted small");
            __builder.AddContent(8, "No disponible");
            __builder.CloseElement();
        }
        else
        {
            if (doc.Extension.ToLower().Contains("pdf"))
            {
                __builder.OpenElement(9, "img");
                __builder.AddAttribute(10, "src", "_content/FinalProyect/pdf_icon.png"); 
                __builder.AddAttribute(11, "class", "img-thumbnail mb-2");
                __builder.AddAttribute(12, "style", "height:80px; object-fit:contain;");
                __builder.CloseElement();
            }
            else
            {
                __builder.OpenElement(13, "img");
                __builder.AddAttribute(14, "src", doc.BlobUrl);
                __builder.AddAttribute(15, "class", "img-thumbnail mb-2");
                __builder.AddAttribute(16, "style", "height:80px; object-fit:cover;");
                __builder.CloseElement();
            }
            __builder.OpenElement(17, "a");
            __builder.AddAttribute(18, "href", doc.BlobUrl);
            __builder.AddAttribute(19, "target", "_blank");
            __builder.AddAttribute(20, "class", "btn btn-primary btn-sm");
            __builder.AddContent(21, "Ver documento");
            __builder.CloseElement();
        }

        __builder.CloseElement(); 
        __builder.CloseElement();
    };

}
