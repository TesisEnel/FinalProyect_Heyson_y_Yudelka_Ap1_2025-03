@implements IDisposable
@using Microsoft.AspNetCore.Components.Authorization
@using FinalProyect.Models
@inject NavigationManager Nav

<style>
    .sidebar-navy {
        background-color: #171840;
        background-image: linear-gradient(180deg, #171840 0%, #0b0c26 100%);
    }

    .icon-glass {
        background-color: rgba(255,255,255,0.15) !important;
        color: white !important;
    }

    ::deep .nav-link.active .icon-glass {
        background-image: linear-gradient(195deg, #49a3f1 0%, #1A73E8 100%) !important;
        box-shadow: 0 4px 20px rgba(0,0,0,.14);
    }
</style>

<div class="material-sidebar sidebar-navy d-flex flex-column flex-shrink-0 p-3 text-white"
     style="height: 100vh; overflow-y: auto;">

    <div class="d-flex align-items-center mb-4 mt-2 px-2">
        <div class="icon-box bg-white text-dark text-center border-radius-xl me-3 d-flex align-items-center justify-content-center shadow-sm">
            <i class="fas fa-landmark fs-5" style="color:#171840;"></i>
        </div>
        <div>
            <div class="fw-bold fs-5 font-monospace">Tesorería</div>
            <div class="small opacity-75">Panel Administrativo</div>
        </div>
    </div>

    <hr class="opacity-50">

    <ul class="nav nav-pills flex-column mb-auto">

        <AuthorizeView>
            <Authorized Context="auth">
                @{
                    bool isAdmin = auth.User.IsInRole("Admin");
                }

                <li class="nav-item mb-2">
                    <NavLink class="nav-link text-white d-flex align-items-center" href="/" Match="NavLinkMatch.All">
                        <div class="icon-box icon-glass me-2"><i class="fas fa-home"></i></div>
                        Inicio
                    </NavLink>
                </li>

                <li class="nav-item mt-3 mb-1">
                    <small class="text-uppercase opacity-75 ps-3">Procesos</small>
                </li>

                <li class="nav-item mb-2">
                    <NavLink class="nav-link text-white d-flex align-items-center" href="enterramiento">
                        <div class="icon-box icon-glass me-2"><i class="fas fa-cross"></i></div>
                        Derecho Enterramiento
                    </NavLink>
                </li>

                <li class="nav-item mb-2">
                    <NavLink class="nav-link text-white d-flex align-items-center" href="construccion">
                        <div class="icon-box icon-glass me-2"><i class="fas fa-tools"></i></div>
                        Derecho Construcción
                    </NavLink>
                </li>

                <li class="nav-item mb-2">
                    <NavLink class="nav-link text-white d-flex align-items-center" href="registrodocumentacion">
                        <div class="icon-box icon-glass me-2"><i class="fas fa-file-alt"></i></div>
                        Registro Documentación
                    </NavLink>
                </li>

                <li class="nav-item mb-2">
                    <NavLink class="nav-link text-white d-flex align-items-center" href="certificacion">
                        <div class="icon-box icon-glass me-2"><i class="fas fa-file-signature"></i></div>
                        Certificaciones
                    </NavLink>
                </li>

                <li class="nav-item mb-2">
                    <NavLink class="nav-link text-white d-flex align-items-center" href="arrendamiento">
                        <div class="icon-box icon-glass me-2"><i class="fas fa-vector-square"></i></div>
                        Arrendamiento Terreno
                    </NavLink>
                </li>

                <li class="nav-item mb-2">
                    <NavLink class="nav-link text-white d-flex align-items-center" href="consultaingreso">
                        <div class="icon-box icon-glass me-2"><i class="fas fa-chart-line"></i></div>
                        Consulta Ingresos
                    </NavLink>
                </li>

                <li class="nav-item mb-2">
                    <NavLink class="nav-link text-white d-flex align-items-center" href="historial">
                        <div class="icon-box icon-glass me-2"><i class="fas fa-history"></i></div>
                        Historial
                    </NavLink>
                </li>

                @if (isAdmin)
                {
                    <li class="nav-item mt-3 mb-1">
                        <small class="text-uppercase opacity-75 ps-3">Administración</small>
                    </li>

                    <li class="nav-item mb-2">
                        <NavLink class="nav-link text-white d-flex align-items-center" href="admin">
                            <div class="icon-box icon-glass me-2"><i class="fas fa-user-shield"></i></div>
                            Panel Admin
                        </NavLink>
                    </li>
                }

                <li class="nav-item mt-3 mb-1">
                    <small class="text-uppercase opacity-75 ps-3">Cuenta</small>
                </li>

                <li class="nav-item mb-2 ps-3">
                    <i class="fas fa-user-circle me-2"></i>@auth.User.Identity?.Name
                </li>

                <li class="nav-item mb-2">
                    <a class="nav-link text-white" href="/logout">
                        <i class="fas fa-sign-out-alt me-2"></i>
                        Cerrar Sesión
                    </a>
                </li>
            </Authorized>

            <NotAuthorized>
                <li class="nav-item mt-3 mb-2">
                    <small class="text-uppercase opacity-75 ps-3">Acceso</small>
                </li>

                <li class="nav-item mb-2">
                    <NavLink class="nav-link text-white d-flex align-items-center" href="Account/Login">
                        <div class="icon-box icon-glass me-2"><i class="fas fa-key"></i></div>
                        Inicio Sesión
                    </NavLink>
                </li>
            </NotAuthorized>
        </AuthorizeView>

    </ul>
</div>

@code {
    protected override void OnInitialized()
    {
        Nav.LocationChanged += (_, _) => StateHasChanged();
    }

    public void Dispose()
    {
        Nav.LocationChanged -= (_, _) => StateHasChanged();
    }
}
